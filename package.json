{
  "name": "build",
  "version": "0.1.0",
  "scripts": {
    "clean": "rimraf \"dist\" && mkdir \"dist\"",
    "postcss": "postcss \"src/css/*.css\" --dir \"dist/css\" --ext \".min.css\" --config \"config/postcss.config.js\" --no-map --verbose --watch",
    "rollup": "rollup --config \"config/rollup.config.js\" --watch",
    "browsersync": "browser-sync start --config \"config/browsersync.config.js\"",
    "dev": "npm run clean && run-p postcss rollup browsersync",
    "svgo": "svgo \"img\" --disable removeViewBox --enable removeDimensions --multipass",
    "stylelint": "stylelint \"src/css/**/*.css\"",
    "eslint": "eslint \"src/js/**/*.js\"",
    "lint": "run-s stylelint eslint"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "define-mixin",
            "mixin"
          ]
        }
      ]
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-airbnb-base",
    "env": {
      "browser": true
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "focus-within": "^2.0.0",
    "normalize.css": "^8.0.0",
    "what-input": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "browser-sync": "^2.24.7",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "globby": "^8.0.1",
    "npm-run-all": "^4.1.3",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^6.0.0",
    "postcss-import": "^12.0.0",
    "postcss-inline-svg": "^3.1.1",
    "postcss-mixins": "^6.2.0",
    "postcss-preset-env": "^5.3.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.65.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify": "^4.0.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "svgo": "^1.0.5"
  }
}
