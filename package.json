{
  "name": "build",
  "version": "0.1.0",
  "scripts": {
    "clean": "rimraf dist && mkdir dist",
    "postcss": "postcss \"src/css/*.css\" --dir dist/css --config config --no-map --verbose --watch",
    "webpack": "webpack --config config/webpack.config.js --watch",
    "browsersync": "browser-sync start --config config/browsersync.config.js",
    "dev": "npm run clean && run-p postcss webpack browsersync",
    "svgo": "svgo img --config config/svgo.config.yml",
    "stylelint": "stylelint \"**/*.css\"",
    "eslint": "eslint \"**/*.js\"",
    "lint": "run-s stylelint eslint"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "define-mixin",
            "mixin"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "dist/**/*"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-airbnb-base",
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "config/**/*"
          ]
        }
      ]
    },
    "env": {
      "browser": true
    }
  },
  "eslintIgnore": [
    "dist/**/*"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "focus-within": "^3.0.2",
    "normalize.css": "^8.0.0",
    "what-input": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.24.7",
    "compression": "^1.7.3",
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "npm-run-all": "^4.1.3",
    "postcss-assets": "^5.0.0",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^6.1.0",
    "postcss-import": "^12.0.0",
    "postcss-inline-svg": "^3.1.1",
    "postcss-mixins": "^6.2.0",
    "postcss-preset-env": "^6.5.0",
    "postcss-strip-units": "^2.0.1",
    "rimraf": "^2.6.2",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "svgo": "^1.1.1",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2"
  }
}
